mapscripts PrimeCity_DepartmentStore_2F_MapScripts {}

script PrimeCity_DepartmentStore_2F_EventScript_Employee {
    lock
    faceplayer
    message(gText_HowMayIServeYou)
    waitmessage
    pokemart(PrimeCity_DepartmentStore_2F_Pokemart1)
    msgbox(gText_PleaseComeAgain)
    release
    end
}

script PrimeCity_DepartmentStore_2F_EventScript_Edgelord {
    lock
    faceplayer
    msgbox("Pssh…\lThey don't sell Dragon Fangs here…\nThis store doesn't deserve to stand…")
    release
    end
}

raw `
	.align 2
PrimeCity_DepartmentStore_2F_Pokemart1:
	.2byte ITEM_SILK_SCARF
    .2byte ITEM_MIRACLE_SEED
    .2byte ITEM_MYSTIC_WATER
    .2byte ITEM_CHARCOAL
	.2byte ITEM_NONE
	release
	end
`