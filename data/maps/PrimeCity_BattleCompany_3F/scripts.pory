script PrimeCity_BattleCompany_3F_EventScript_Elevator {
    lock
    message("Which floor will you visit?")
    waitmessage
    multichoicedefault(0, 0, MULTI_BATTLE_COMPANY, 0, 0)
    switch(var(VAR_RESULT)) {
        case 0:
            msgbox("Going to 1F.")
            closemessage
            warpdoor(MAP_PRIME_CITY_BATTLE_COMPANY_1F, 0xFF, 7, 2)
        case 1:
            msgbox("Going to 2F.")
            closemessage
            warpdoor(MAP_PRIME_CITY_BATTLE_COMPANY_2F, 0xFF, 7, 2)
        case 2:
            msgbox("Decided to stay on 3F.")
    }
    release
    end
}