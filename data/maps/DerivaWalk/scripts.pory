    end
}

script DerivaWalk_EventScript_Yan {
    trainerbattle_double(TRAINER_G2_YAN_AND_IVO, "Ivo, let's wash this Trainer\naway!", "Yan: I'm awash with embarassment!\nIvo: Sis, it's not that bad.", "We can't battle unless you've\ngot two Pokémon with you.")
