    end
}

script DerivaWalk_EventScript_Ivo {
    trainerbattle_double(TRAINER_G2_YAN_AND_IVO, "Ivo: Oh, Yan, here comes a\nTrainer.", "Yan: I'm awash with embarassment!\nIvo: Sis, it's not that bad.", "We're partners, so if you want\nto battle, you'll need two Pokémon.")
