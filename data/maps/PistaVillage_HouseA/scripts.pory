script PistaVillage_HouseA_EventScript_Gentleman {
    lock
    faceplayer
    if(flag(FLAG_RECEIVED_TM47) == FALSE) {
        msgbox("Good day, sonny.\pSince you came to visit us,\nI'd like you to have this.")
        giveitem(ITEM_TM47)
        if(var(VAR_RESULT) == 0) {
            msgbox("Cripes!\nYou don't have room for this.")
        } else {
            setflag(FLAG_RECEIVED_TM47)
            msgbox("Steel Wing is a highly\ncultured move.\pI taught it to my Corviknight.")
        }
    } else {
        msgbox("You have a good day now.\pMake sure to use that TM47\nthat I gave you!")
    }
    release
    end
}